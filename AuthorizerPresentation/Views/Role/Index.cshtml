@model IEnumerable<AuthorizerPresentation.ViewModels.RoleViewModel>

@{
    ViewBag.Title = "List Of Roles";
}

<h2>List Of Roles</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>
                @Html.DisplayName("Privileged Pages")
            </th>
            <th>
                Operations
            </th>
        </tr>
    </thead>
@foreach (var item in Model)
{
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                <ul>
                    @foreach (var page in item.pageDetails)
                {
                        <li>@page.PageName</li>
                    }
                </ul>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RoleId }) |
                @Html.ActionLink("Details", "Details", new { id = item.RoleId }, new { @style = "color:green" } ) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RoleId }, new { @style = "color:red" } )
            </td>
        </tr>
    </tbody>
}

</table>
